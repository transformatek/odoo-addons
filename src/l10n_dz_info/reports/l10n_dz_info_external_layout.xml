<odoo>
    <template id="l10n_dz_info_external_layout__inherit_background" inherit_id="web.external_layout_background">
        <xpath expr="//span[contains(@t-field, 'company.partner_id')]" position="after">
                
                <p>
                    <strong>R.C:  </strong>
                    <span t-field="company.partner_id.rc" />
                
                <br/>
                
                    <strong>N.I.F:  </strong>
                    <span t-field="company.partner_id.nif" />
                
                <br/>
                
                    <strong>N.I.S:  </strong>
                    <span t-field="company.partner_id.nis" />
                
                <br/>
                
                    <strong>Article d'imposition:  </strong>
                    <span t-field="company.partner_id.ai" />
                </p>
            </xpath>
        
    </template>

